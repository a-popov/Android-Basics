        <activity
            android:name=".Email"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        
        <activity
            android:name=".Camera"
            android:label="Camera Application"
            android:theme="@android:style/Theme.NoTitleBar"
